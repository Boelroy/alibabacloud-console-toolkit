{
  "extends": "tslint:recommended",
  "rules": {
    "max-line-length": [
      true,
      {
        "limit": 80,
        "ignore-pattern": "//"
      }
    ],
    "object-literal-sort-keys": false,
    "new-parens": true,
    "no-arg": true,
    "no-bitwise": true,
    "no-conditional-assignment": true,
    "no-consecutive-blank-lines": false,
    "no-console": true,
    "no-var-requires": false,
    "quotemark": [
      true,
      "single", "avoid-escape", "avoid-template", "jsx-double"
    ],
    "ordered-imports": false,
    "trailing-comma": [
      true,
      {
        "multiline": {
          "objects": "always",
          "arrays": "always",
          "functions": "never",
          "typeLiterals": "ignore"
        },
        "esSpecCompliant": true
      }
    ]
  },
  "jsRules": {
    "max-line-length": {
      "options": [80]
    }
  }
}